<div class="row">
    <div class="col">
        <h3>{{#str}}my_list_of_students, local_earlyalert{{/str}} - {{#str}}alerts_raised, local_earlyalert{{/str}}</h3>
    </div>
</div>
<div class="row">
    <div class="col">
        {{#str}}course_overview_render_instructions, local_earlyalert{{/str}}
    </div>
</div>
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header">
                <h5>{{#str}}course_list, local_earlyalert{{/str}}</h5>
            </div>
            <div class="card-body">
                <div class="accordion" id="accordionCourseOverview">
                    {{#students}}
                        <div class="card">
                            <div class="card-header" id="heading{{id}}">
                                <h2 class="mb-0">
                                    <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#collapse{{id}}"
                                            aria-expanded="true" aria-controls="collapse{{id}}">
                                        {{lastname}}, {{firstname}} ({{idnumber}})
                                    </button>
                                </h2>
                            </div>

                            <div id="collapse{{id}}" class="collapse" aria-labelledby="heading{{id}}" data-parent="#accordionCourseOverview">
                                <div class="card-body">
                                    {{#logs}}
                                        <div class="row">
                                            <div class="col-md-6">
                                                {{{message_type}}} - {{date_sent}}
                                            </div>
                                            <div class="col-md-2">
                                                <button type="button" class="btn btn-primary btn-sm btn-early-alert-preview-message" data-logid="{{id}}">
                                                    {{#str}}view_message, local_earlyalert{{/str}}
                                                </button>
                                            </div>
                                            <div class="col-md-4 d-flex justify-content-end">
                                                <table class="table table-borderless table-sm">
                                                    <thead class="thead-light">
                                                    <tr>
                                                        <th>
                                                            <div class="d-flex justify-content-center">
                                                                Instructor/TA
                                                            </div>

                                                        </th>
                                                        <th>
                                                            <div class="d-flex justify-content-center">
                                                                Advisor
                                                            </div>
                                                        </th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    <tr>
                                                        <td>
                                                            <div class="d-flex justify-content-center">
                                                                <input type="checkbox" class="checkbox-instructor-followup"
                                                                       data-logid="{{id}}"
                                                                       {{#student_advised_by_instructor}}checked{{/student_advised_by_instructor}}>
                                                            </div>

                                                        </td>
                                                        <td>
                                                            <div class="d-flex justify-content-center">
                                                                <input type="checkbox" disabled class="checkbox-advisor-followup"
                                                                       data-logid="{{id}}"
                                                                       {{#student_advised_by_advisor}}checked{{/student_advised_by_advisor}}>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    </tbody>

                                                </table>
                                            </div>
                                        </div>
                                    {{/logs}}
                                </div>
                            </div>
                        </div>
                    {{/students}}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add AMD js to call course_overview_updating.js -->
{{#js}}
    require(['local_earlyalert/course_overview_updating'], function (course_overview_updating) {
        course_overview_updating.init();
    });
{{/js}}