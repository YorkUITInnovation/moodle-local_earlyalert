{{^show_grades}}
    <style>
        .early-alert-grade-column {
            display: none;
        }
    </style>
{{/show_grades}}
<input type="hidden" id="early-alert-alert-type" value="{{alert_type}}">
<input type="hidden" id="early_alert_filter_course_id" value="{{course_id}}">
<input type="hidden" id="early_alert_course_name" value="{{fullname}}">
<input type="hidden" id="early-alert-teacher-user-id" value="{{teacher_user_id}}">
{{#impersonate}}
    <div class="row">
        <div class="col-md-3">
            <label for="search" class="col-form-label">
                {{#str}}impersonate_user, local_earlyalert{{/str}}
            </label>
            <select id="search" name="search" class="form-control"></select>
        </div>
        <div class="col-md-3">
            <label for="course-search" class="col-form-label">
                {{#str}}course_list, local_earlyalert{{/str}}
            </label>
            <select id="course-search" name="course-search" class="form-control"></select>
        </div>
    </div>
    {{#impersonated_user}}
        <div class="row mt-3">
            <div class="col">
                <div class="alert alert-info">
                    <b>{{#str}}impersonating_user, local_earlyalert{{/str}}:</b> {{impersonated_user}}
                </div>
            </div>
        </div>
    {{/impersonated_user}}
{{/impersonate}}
{{^impersonate}}
    <div class="row">
        <div class="col-md-3">
            <label for="course-search" class="col-form-label">
                {{#str}}course_list, local_earlyalert{{/str}}
            </label>
            <select id="course-search" name="course-search" class="form-control"></select>
        </div>
    </div>
{{/impersonate}}
{{^rows}}
    <div class="row mt-4">
        <div class="col">
            <div class="alert alert-info">
                <b>{{#str}}no_courses, local_earlyalert{{/str}}</b>
            </div>
        </div>
    </div>
{{/rows}}
{{#rows}}
    <div class="row mt-4">
        <div class="col">
            <div class="card-deck">
                {{#courses}}
                    {{#is_selected}}
                    <div class="card">
                        <div class="card-header">
                            <h6>{{fullname}}</h6>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-danger text-center">
                                <b>{{#str}}available_alert_types, local_earlyalert{{/str}}</b>
                            </div>
                            <h5>{{#str}}send_alert_based_on, local_earlyalert{{/str}}</h5>
                            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-6 g-5">

                                <div class="col mb-4">
                                    <div class="card" style="">
                                        <div class="card-body d-flex justify-content-center align-items-center">
                                            <img src="{{config.wwwroot}}/local/earlyalert/pix/low_grade.png"
                                                 class="img-fluid" alt="Grade">
                                        </div>
                                        <div class="card-footer d-flex justify-content-center align-items-center">
                                            <button
                                                    type="button"
                                                    data-href="{{config.wwwroot}}/local/earlyalert/dashboard.php?course_id={{id}}"
                                            data-course_id="{{id}}"
                                            data-name="{{fullname}}"
                                            data-link="grade"
                                            class="btn btn-outline-danger btn-sm early-alert-type-button"
                                            role="button" aria-pressed="true">{{#str}}low_grade, local_earlyalert{{/str}}</button>
                                        </div>
                                    </div>
                                </div>

                                <div class="col mb-4">
                                    <div class="card">
                                        <div class="card-body d-flex justify-content-center align-items-center">
                                            <img src="{{config.wwwroot}}/local/earlyalert/pix/missed_assignment.png"
                                                 class="img-fluid" alt="Assignment">
                                        </div>
                                        <div class="card-footer d-flex justify-content-center align-items-center">
                                            <button type="button"
                                                    data-href="{{config.wwwroot}}/local/earlyalert/dashboard.php?course_id={{id}}"
                                            sd data-course_id= "{{id}}"
                                            data-name= "{{fullname}}"
                                            data-link="assign"
                                            class="btn btn-outline-danger btn-sm early-alert-type-button"
                                            role="button" aria-pressed="true">{{#str}}missed_assignment, local_earlyalert{{/str}}</button>
                                        </div>
                                    </div>
                                </div>

                                <div class="col mb-4">
                                    <div class="card">
                                        <div class="card-body d-flex justify-content-center align-items-center">
                                            <img src="{{config.wwwroot}}/local/earlyalert/pix/missed_exam.png"
                                                 class="img-fluid" alt="Exam">
                                        </div>
                                        <div class="card-footer d-flex justify-content-center align-items-center">
                                            <button type="button"
                                                    data-href="{{config.wwwroot}}/local/earlyalert/dashboard.php?course_id={{id}}"
                                            data-course_id= "{{id}}"
                                            data-name= "{{fullname}}"
                                            data-link="exam"
                                            class="btn btn-outline-danger btn-sm early-alert-type-button"
                                            role="button" aria-pressed="true">{{#str}}missed_exam, local_earlyalert{{/str}}</a>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="card-footer">
                            <p>
                                <button type="button" class="btn btn-outline-secondary btn-course-overview" data-course_id="{{id}}">
                                    {{#str}}course_overview, local_earlyalert{{/str}}
                                </button>
                            </p>
                            {{#str}}course_overview_instructions, local_earlyalert{{/str}}
                        </div>
                    </div>
                    {{/is_selected}}
                {{/courses}}
            </div>
        </div>
    </div>
{{/rows}}
<div class="row mt-3">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <div id="early-alert-student-results" class="col early-alert-student-results">
                </div>
            </div>
        </div>
    </div>
</div>
